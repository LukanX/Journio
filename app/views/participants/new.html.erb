<% provide(:title, 'Add a participant') %>
<h1>Create a study</h1>
<div class="row">
	<div class="span6 offset3">
		<%= form_for [current_study, @participant] do |f| %>
		
		<%= f.label :name %>
		<%= f.text_field :name %>

		<%= f.label :email %>
		<%= f.text_field :email %>

		<%= f.label :phone_number, "Phone Number" %>
		<%= f.text_field :phone_number %>

		<%= f.submit "Add participant", class: "btn btn-large btn-primary" %>

		<% end %>
	</div>
</div>
