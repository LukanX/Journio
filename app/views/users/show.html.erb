<% provide(:title, @user.name) %>
<div class="row">
<h1> Account </h1>
  <div class="account span6 offset3">
  	<h1>
  		<%= gravatar_for @user %>
  		<%= @user.name %>
  	</h1>
  	<h4> <%= @user.email %> </h4>
  	<% if current_user? @user %>
	  	<%= link_to "edit", edit_user_path %>
	<% end %>
  </div>
</div>